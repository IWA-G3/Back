{
  "name": "dangerous-location-connector",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "topics": "dangerous_locations",
    "connection.url": "jdbc:postgresql://${DB_HOSTNAME:${DB_PORT}/${DB_NAME}?user=${DB_USER}&password=${DB_PASSWORD}",
    "transforms": "unwrap",
    "transforms.unwrap.type": "io.debezium.transforms.UnwrapFromEnvelope",
    "auto.create": "true",
    "insert.mode": "upsert",
    "pk.fields": "id_location",
    "pk.mode": "record_key",
    "plugin.name": "pgoutput",
    "table.whitelist": "public.case_type"
  }
}